suites:
    main:
        namespace: App
        psr4_prefix: App

formatter.name: pretty

extensions:
    LeanPHP\PhpSpec\CodeCoverage\CodeCoverageExtension:
        format:
            - 'clover'
            - 'html'
        output:
            clover: 'build/logs/clover.xml'
            html: 'build/coverage'
        whitelist:
            - 'src/Domain'
